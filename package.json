{
  "name": "aristo-badges",
  "version": "1.0.0",
  "private": true,
  "description": "AristoBadges generates fast SVG metrics for GitHub repos, organizations, and NPM packages.",
  "license": "MIT",
  "author": "AristoByte",
  "homepage": "https://badges.aristobyte.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aristobyte/aristo-badges.git"
  },
  "bugs": {
    "url": "https://github.com/aristobyte/aristo-badges/issues"
  },
  "keywords": [
    "badges",
    "svg",
    "readme",
    "github",
    "metrics",
    "netlify",
    "nextjs"
  ],
  "engines": {
    "node": ">=20.19.0",
    "npm": ">=10.8.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "lint:styles": "stylelint \"**/*.{css,scss}\"",
    "typecheck": "tsc --noEmit",
    "test": "npm run test:unit && npm run test:server",
    "test:unit": "jest --testPathPattern=\".*.unit.test.(ts|tsx)$\"",
    "test:server": "jest --testPathPattern=\".*.server.test.(ts|tsx)$\"",
    "test:watch": "jest --watch",
    "check": "bash scripts/check-all.sh",
    "check:styles": "bash scripts/check-stylelint.sh",
    "check:typecheck": "bash scripts/check-typecheck.sh",
    "check:test:unit": "bash scripts/check-tests-unit.sh",
    "check:test:server": "bash scripts/check-tests-server.sh",
    "prepare": "husky"
  },
  "dependencies": {
    "@aristobyte-ui/label": "^2.16.5",
    "@aristobyte-ui/utils": "^2.16.5",
    "isntall": "^0.0.1-security",
    "next": "16.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "sass": "^1.80.4"
  },
  "devDependencies": {
    "@netlify/plugin-nextjs": "^5.9.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.10",
    "stylelint": "^16.10.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ],
    "*.{css,scss}": [
      "stylelint --fix"
    ]
  }
}
